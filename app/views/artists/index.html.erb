<h1>Listing artists</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Is available</th>
    <th>Last album released on</th>
    <th>Genre</th>
    <th>Instrument played</th>
    <th>Too old to rock n roll</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artists.each do |artist| %>
  <tr>
    <td><%= artist.name %></td>
    <td><%= artist.age %></td>
    <td><%= artist.is_available %></td>
    <td><%= artist.last_album_released_on %></td>
    <td><%= artist.genre %></td>
    <td><%= artist.instrument_played %></td>
    <td><%= artist.too_old_to_rock_n_roll %></td>
    <td><%= link_to 'Show', artist %></td>
    <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
    <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

